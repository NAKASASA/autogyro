<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zlsadesign.autogyro">

  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.WRITE_SETTINGS" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
      android:name=".LaunchActivity"
      android:label="@string/app_name"
      android:theme="@style/LaunchTheme"
      android:launchMode="singleTask"
      >

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

    </activity>

    <activity
      android:name=".MainActivity"
      android:label="@string/app_name"
      android:launchMode="singleTask"
      >

      <intent-filter>
        <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES"/>
      </intent-filter>

    </activity>

    <activity
      android:name=".IntroActivity"
      android:label="@string/label_intro"
      android:theme="@style/IntroTheme"
      android:launchMode="singleTask"
      >

    </activity>

    <service android:name=".AutogyroService"/>

    <service
      android:name=".TileLeftService"
      android:icon="@drawable/ic_tile_left"
      android:label="@string/label_tile_left"
      android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
      >

      <intent-filter>
        <action
          android:name="android.service.quicksettings.action.QS_TILE"/>
      </intent-filter>

    </service>

    <service
      android:name=".TileRightService"
      android:icon="@drawable/ic_tile_right"
      android:label="@string/label_tile_right"
      android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
      >

      <intent-filter>
        <action
          android:name="android.service.quicksettings.action.QS_TILE"/>
      </intent-filter>

    </service>

    <service
      android:name=".TileFlipService"
      android:icon="@drawable/ic_tile_flip"
      android:label="@string/label_tile_flip"
      android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
      >

      <intent-filter>
        <action android:name="android.service.quicksettings.action.QS_TILE"/>
      </intent-filter>

    </service>

  </application>

</manifest>
