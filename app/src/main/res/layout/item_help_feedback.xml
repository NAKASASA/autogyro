<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"

  android:orientation="horizontal"

  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >

  <ImageView
    android:id="@+id/icon"

    android:layout_height="@dimen/help_feedback_item_height"
    android:layout_width="24dp"

    android:gravity="center"

    android:layout_marginStart="@dimen/help_feedback_item_margin_horizontal"
    android:layout_marginEnd="@dimen/help_feedback_item_gap"

    android:tint="@color/accent"

    android:src="@color/transparent"

    />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    >

    <TextView
      android:id="@+id/primary"

      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"

      android:layout_marginEnd="@dimen/help_feedback_item_text_gap"

      android:gravity="start|bottom"

      style="@android:style/TextAppearance.Material.Subhead"
      />

    <TextView
      android:id="@+id/secondary"

      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"

      android:layout_marginEnd="@dimen/help_feedback_item_margin_horizontal"

      android:gravity="start|top"

      style="@android:style/TextAppearance.Material.Body1"
      android:textColor="@color/light_text_secondary"
      />

  </LinearLayout>

</LinearLayout>